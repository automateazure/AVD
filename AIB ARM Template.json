{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
        "type": "string"
      },
      "api-version": {
        "type": "string"
      },
      "svclocation": {
        "type": "string"
      }
    },
    "variables": {},
    "resources": [
      {
        "name": "[parameters('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[parameters('api-version')]",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "tags": {
          "imagebuilderTemplate": "win10wvd",
          "userIdentity": "enabled",
          "CreatedBy": "Brian Brito",
          "Environment": "Development"
        },
        "identity": {
          "type": "UserAssigned",
          "userAssignedIdentities": {
            "/subscriptions/c35fecee-25dc-48d4-82c7-141992ffe249/resourcegroups/AA-AzureImageBuilder/providers/Microsoft.ManagedIdentity/userAssignedIdentities/aa-azureimagebuilder": {}
          }
        },
        "properties": {
          "buildTimeoutInMinutes": 30,
          "vmProfile": {
            "vmSize": "Standard_D2_v2",
            "osDiskSizeGB": 127
          },
          "source": {
            "type": "PlatformImage",
            "publisher": "MicrosoftWindowsDesktop",
            "offer": "Windows-10",
            "sku": "win10-22h2-ent",
            "version": "latest"
          },
          "customize": [
            {
              "type": "PowerShell",
              "name": "GetAzCopy",
              "inline": [
                "New-Item -Type Directory -Path 'c:\\' -Name temp",
                "invoke-webrequest -uri 'https://aka.ms/downloadazcopy-v10-windows' -OutFile 'c:\\temp\\azcopy.zip'",
                "Expand-Archive 'c:\\temp\\azcopy.zip' 'c:\\temp'",
                "copy-item 'C:\\temp\\azcopy_windows_amd64_*\\azcopy.exe\\' -Destination 'c:\\temp'"
              ]
            },
      {
        "type": "PowerShell",
        "name": "Windows Package Manager App Updates",
        "runElevated": true,
        "runAsSystem": true,
        "scriptUri": "https://raw.githubusercontent.com/automateazure/AVD/main/AIBWinGetInstaller.ps1"
      },
      {
        "type": "PowerShell",
        "name": "OptimizeOS",
        "runElevated": true,
        "runAsSystem": true,
        "scriptUri": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/solutions/14_Building_Images_WVD/1_Optimize_OS_for_WVD.ps1"
      },
      {
        "type": "WindowsRestart",
        "restartCheckCommand": "write-host 'restarting post Optimizations'",
        "restartTimeout": "5m"
      },
      {
        "type": "PowerShell",
        "name": "Install M365",
        "runElevated": true,
        "runAsSystem": true,
        "scriptUri": "https://raw.githubusercontent.com/automateazure/AVD/main/AIBM365.ps1"
      },
      {
        "type": "PowerShell",
        "name": "Install Teams",
        "runElevated": true,
        "runAsSystem": true,
        "scriptUri": "https://raw.githubusercontent.com/automateazure/AVD/main/AIBTeams.ps1"
      },
      {
        "type": "WindowsRestart",
        "restartCheckCommand": "write-host 'restarting post Office and Teams Install'",
        "restartTimeout": "5m"
      },
      {
        "type": "WindowsUpdate",
        "searchCriteria": "IsInstalled=0",
        "filters": [
          "exclude:$_.Title -like '*Preview*'",
          "include:$true"
        ],
        "updateLimit": 40
      }    
      ],
          "distribute": [
            {
              "type": "ManagedImage",
              "imageId": "/subscriptions/c35fecee-25dc-48d4-82c7-141992ffe249/resourceGroups/AA-AzureImageBuilder/providers/Microsoft.Compute/images/win10wvd",
              "location": "eastus",
              "runOutputName": "azVmIBwin10wvd",
              "artifactTags": {
                "source": "azVmImageBuilder",
                "baseosimg": "win10-22h2-ent"
              }
            }
          ]
        }
      }
    ]
  }
  





















































